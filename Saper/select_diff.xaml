<Window x:Class="Saper.select_diff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper"
        mc:Ignorable="d"
        Title="Сапер" Height="300" Width="200" ResizeMode="NoResize" Topmost="True" WindowStyle="None">
    <Grid>
        <Button x:Name="lite_diff" Content="Легкая" HorizontalAlignment="Left" Margin="63,100,0,0" VerticalAlignment="Top" Width="75" Click="Lite_diff_Click"/>
        <Button x:Name="mid_diff" Content="Средняя" HorizontalAlignment="Left" Margin="63,150,0,0" VerticalAlignment="Top" Width="75" Click="Mid_diff_Click"/>
        <Button x:Name="hard_diff" Content="Сложная" HorizontalAlignment="Left" Margin="63,200,0,0" VerticalAlignment="Top" Width="75" Click="Hard_diff_Click"/>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Width="190" MaxWidth="190" Height="46" FontSize="14" Margin="4,31,0,0" >
            <Label.Content>
                <TextBlock Margin="15,5,5,5" Width="151">Выберите сложность</TextBlock>
            </Label.Content>
        </Label>

    </Grid>
</Window>
