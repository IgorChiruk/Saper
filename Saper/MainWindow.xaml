<Window x:Name="windows" x:Class="Saper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper"
        mc:Ignorable="d"
        Title="Сапер" Height="300" Width="200" ResizeMode="NoResize" Topmost="True">
    <Grid x:Name="grid_main_window" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="176*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="name_of_the_game" Background="Black" TextElement.Foreground="Red" Content="САПЕР" Margin="10,40,0,174" TextElement.FontSize="30"  TextBlock.TextAlignment="Center" Grid.ColumnSpan="2" ForceCursor="True" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.498,1.498" Width="182"/>
        <Button x:Name="button_start" Content="Начать игру" Height="30" TextBlock.FontSize="14" Grid.ColumnSpan="2" Width="122" Click="Button_start_Click"/>
        <Button x:Name="exit_button" Content="Выйти" Height="30" TextBlock.FontSize="14" Grid.ColumnSpan="2" Width="80" Margin="58,187,54,52" Click="Exit_button_Click"/>

    </Grid>
</Window>
