<Window x:Class="Saper.Exit_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper"
        mc:Ignorable="d"
        Title="Exit_window" Height="80.199" Width="198.405" ResizeMode="NoResize" Topmost="True" WindowStyle="None" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="190" MaxWidth="190" Height="46" FontSize="14" >
            <Label.Content>
                <TextBlock TextWrapping="Wrap" Width="180">"Вы действительно хотите покинуть саперный мир?"</TextBlock>
            </Label.Content>
        </Label>
        <Button x:Name="button_yes" Content="ДА" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="75" Click="button_yes_Click"/>
        <Button x:Name="button_no" Grid.ColumnSpan="2" Content="НЕТ" Grid.Column="1" HorizontalAlignment="Left" Margin="1,46,0,0" VerticalAlignment="Top" Width="75" Click="button_no_Click"/>




    </Grid>
</Window>
